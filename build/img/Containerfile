## Build aarch64 image
## Note: Unless ran on an aarch64 machine, this will require qemu-user-static to be installed
## a la 
## ```bash
## pacman -S qemu-user-static qemu-user-static-binfmt
## ```
ARG ARCH=arm64v8
FROM archlinux-$ARCH:latest AS build
#VOLUME /build

WORKDIR /archlinux
RUN mkdir -p /archlinux/rootfs
COPY pacstrap-docker /archlinux/

RUN pacman-key --init && pacman-key --populate archlinuxarm && pacman -Sy --noconfirm 
RUN ./pacstrap-docker /archlinux/rootfs \
        base  
#        linux-rpi4 linux-rpi4-headers  
#       python3
RUN (pacman -r /archlinux/rootfs -S --noconfirm archlinuxarm-keyring || true)          
RUN rm -rf rootfs/var/lib/pacman/sync/*

FROM scratch
ARG ARCH=arm64v8

COPY --from=0 /archlinux/rootfs/ /
COPY rootfs/common/ /
COPY rootfs/$ARCH/ /

ENV LANG=en_US.UTF-8

RUN locale-gen && \
    pacman-key --init && \
    pacman-key --populate archlinux && \
    (pacman-key --populate archlinuxarm || true)

CMD ["/usr/bin/bash"]